<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:gravity="center">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_lock_idle_lock"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código de Verificação"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviámos um código para o teu email."
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/etCodigo2FA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserir Código (6 dígitos)"
        android:inputType="number"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:textSize="20sp"
        android:maxLength="6"/>

    <Button
        android:id="@+id/btnVerificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificar"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvReenviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não recebeste? Reenviar Código"
        android:textColor="#0D6EFD"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="16dp"/>

</LinearLayout>